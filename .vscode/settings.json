        "**/.svn": true,
        "**/.hg": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true
    },
    "hide-files.files": [],
    "git.enabled": false,
    "cSpell.words": [
        "fuzzysort"
    ]
}
