{
  "compilerOptions": {
    "outDir": "dist",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "allowSyntheticDefaultImports": true,
    "noErrorTruncation": true,
    "lib": [
      "ESNext"
    ],
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "ESNext",
    "incremental": true,
    "plugins": [
      {
        "name": "@effect/language-service"
      }
    ],
    "tsBuildInfoFile": "./tsconfig.tsbuildinfo",
    "types": [
      "node"
    ]
  },
  "include": [
    "src/**/*",
    "ci/**/*",
    "tsup.config.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
